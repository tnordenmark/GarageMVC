@model IEnumerable<GarageMVC.Models.Vehicle>

@{
    ViewBag.Title = "Search";
}

<h2>Vehicle List</h2>
<p>Search with Articlnumber, Price witha comma or just a product name.</p>
<form class="glyphicon glyphicon-search" id="frmsearch" action="~/Garage/NameSearch" method="get">
    <input type="text" name="name" @*placeholder="Write here for search"*@ />
    <input class="btn btn-primary" id="submit" name="name" type="submit" style="font-weight:bold;" value="Search" />
</form>
<p>
    @*@Html.ActionLink("Check in Vehicle", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkingPlace)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ParkingPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkingDate)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingPlace)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ParkingPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingDate)
        </td>*@
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("CheckOut", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
